<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_messenger_logo"
            android:padding="16dp"
            android:contentDescription="Verification" />

        <TextView
            android:id="@+id/textCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проверочный код"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textCodeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мы отправили код на ваш номер"
            android:textSize="16sp"
            android:textColor="#B3FFFFFF"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/input_container_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxStrokeColor="#4CAF50"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:hintTextColor="#4CAF50"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="#4CAF50">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextVerificationCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Код из SMS"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@android:color/white"
                    android:textColorHint="#B3FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:digits="0123456789" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить код снова"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonConfirmCode"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Подтвердить"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="28dp"
            app:elevation="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textWrongNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Неверный номер? Изменить"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView>
